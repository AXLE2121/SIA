          <i class="fas fa-bars"></i>
        </button>
        
        <div class="user-info">
          <p>
            Welcome,
            <span id="welcomeName">User</span>
          </p>
          <div class="avatar" id="avatarInitials">U</div>
        </div>
      </div>

      <h1 class="page-title">Dashboard Overview</h1>
      
      <!-- Stats Cards -->
      <div class="cards">
        <div class="card">
          <div class="card-icon blue">
            <i class="fas fa-users"></i>
          </div>
          <div class="card-title">Total Users</div>
          <div class="card-value" id="totalUsers">1,248</div>
        </div>
        
        <div class="card">
          <div class="card-icon green">
            <i class="fas fa-chart-line"></i>
          </div>
          <div class="card-title">Growth Rate</div>
          <div class="card-value" id="growthRate">+12.5%</div>
        </div>
        
        <div class="card">
          <div class="card-icon purple">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="card-title">Active Now</div>
