  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import {
      getAuth,
      onAuthStateChanged,
      signOut
    } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";
    import {
      getFirestore,
      doc,
      getDoc
    } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDXmcoM0Sk3lJInvJi2mGWeXTkkOiA00ZU",
      authDomain: "siaa-ff9f4.firebaseapp.com",
      projectId: "siaa-ff9f4",
      storageBucket: "siaa-ff9f4.firebasestorage.app",
      messagingSenderId: "368180748618",
      appId: "1:368180748618:web:eb7a6283acbb749e54e1b3",
      measurementId: "G-3DD027B5P7"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // DOM Elements
    const welcomeNameEl = document.getElementById("welcomeName");
    const avatarInitialsEl = document.getElementById("avatarInitials");
    const nameCell = document.getElementById("cellName");
    const usernameCell = document.getElementById("cellUsername");
    const emailCell = document.getElementById("cellEmail");
    const userRow = document.getElementById("userRow");
    const emptyMsg = document.getElementById("emptyMsg");
    const errorMsg = document.getElementById("errorMsg");
    const loadingIndicator = document.getElementById("loadingIndicator");
    const logoutBtn = document.getElementById("logoutBtn");
    const mobileToggle = document.getElementById("mobileToggle");
    const sidebar = document.querySelector('.sidebar');
    const overlay = document.getElementById('overlay');

    // Helper to create initials for avatar
    function getInitials(fullname, fallback = "U") {
      if (!fullname) return fallback;
      const parts = fullname.trim().split(" ");
      if (parts.length === 1) return parts[0][0].toUpperCase();
      return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
    }

    // Toggle mobile sidebar
    mobileToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');
    });

    // Close sidebar when clicking overlay
    overlay.addEventListener('click', () => {
      sidebar.classList.remove('active');
      overlay.classList.remove('active');
    });

    // Handle authentication state changes
    onAuthStateChanged(auth, async (user) => {
      if (!user) {
        // Not logged in – back to login page
        window.location.href = "index.html";
        return;
      }

      try {
        // Show loading indicator
        loadingIndicator.style.display = 'flex';
        emptyMsg.style.display = 'none';
        errorMsg.style.display = 'none';
        
        // Simulate API delay for demo
        await new Promise(resolve => setTimeout(resolve, 1500));
        
        const userRef = doc(db, "users", user.uid);
        const snap = await getDoc(userRef);

        let fullname = "";
        let username = "";
        let email = user.email || "";

        if (snap.exists()) {
          const data = snap.data();
          fullname = data.fullname || "";
          username = data.username || "";
          if (data.email) email = data.email;
        }

        const displayName =
          fullname || username || email || "User";

        // Fill UI
        welcomeNameEl.textContent = displayName;
        avatarInitialsEl.textContent = getInitials(fullname || username || email);

        nameCell.textContent = fullname || "—";
        usernameCell.textContent = username || "—";
        emailCell.textContent = email || "—";

        // Update stats cards with random data for demo
        document.getElementById('totalUsers').textContent = Math.floor(Math.random() * 5000 + 1000).toLocaleString();
        document.getElementById('growthRate').textContent = `+${(Math.random() * 20).toFixed(1)}%`;
        document.getElementById('activeUsers').textContent = Math.floor(Math.random() * 500 + 100);

        userRow.style.display = "grid";
        loadingIndicator.style.display = "none";
      } catch (err) {
        console.error(err);
        loadingIndicator.style.display = "none";
        emptyMsg.style.display = "none";
        errorMsg.style.display = "block";
        errorMsg.textContent = "Unable to load user information. Please try again.";
      }
    });

    logoutBtn.addEventListener("click", async () => {
      try {
        await signOut(auth);
      } catch (err) {
        console.error(err);
      } finally {
        window.location.href = "index.html";
      }
    });
  </script>
</body>
